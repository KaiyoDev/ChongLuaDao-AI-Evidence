{
  "manifest_version": 3,
  "name": "ChongLuaDao AI Evidence",
  "description": "Phân tích chuyên sâu các trang lừa đảo, chợ đen (CCV, tiền bẩn), tạo bằng chứng chi tiết bằng AI.",
  "version": "2.8.0",
  "action": { "default_popup": "popup.html" },
  "options_page": "options.html",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["https://chongluadao.vn/*", "https://generativelanguage.googleapis.com/*"],
  "background": { "service_worker": "background.js" },
  "icons": { "128": "icons/icon128.png" },
  "web_accessible_resources": [
    {
      "resources": ["history.html", "result.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
